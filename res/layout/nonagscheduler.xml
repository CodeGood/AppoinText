<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/NoNagSchedulerStart"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:key="NoNagSchedulerStart"
            android:text="Start Time" />

        <TimePicker
            android:id="@+id/NoNagSchedulerStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="NoNagSchedulerStartTime" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/NoNagSchedulerEnd"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:key="NoNagSchedulerEnd"
            android:text="End Time" />

        <TimePicker
            android:id="@+id/NoNagSchedulerEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="NoNagSchedulerEndTime" />
    </LinearLayout>

</LinearLayout>